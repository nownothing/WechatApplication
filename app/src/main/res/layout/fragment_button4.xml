<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:id="@+id/me_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/photo"
        android:layout_marginLeft="380dp"
        />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="107dp">

        <ImageView
            android:id="@+id/me_head"
            android:layout_width="134dp"
            android:layout_height="105dp"
            android:src="@drawable/head" />

        <TextView
            android:id="@+id/t4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="180dp"
            android:layout_marginTop="10dp"
            android:text="希望高分"
            android:textSize="30dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/t5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/t4"
            android:layout_alignLeft="@+id/t4"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="7dp"
            android:text="微信号：********" />

        <ImageView
            android:id="@+id/i4"
            android:layout_width="29dp"
            android:layout_height="19dp"
            android:layout_alignTop="@+id/t5"
            android:layout_marginLeft="350dp"
            android:src="@drawable/erweima" />

    </RelativeLayout>

    <ListView
        android:id="@+id/l4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/me_title"
        android:layout_marginTop="20dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/locate_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/locate"/>

        <Button
            android:id="@+id/locate_text"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:text="定位"/>

    </LinearLayout>
    


</LinearLayout>